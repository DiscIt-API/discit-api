{
  "name": "discit",
  "version": "1.0.0",
  "description": "RESTful API for disc golf discs.",
  "main": "build/index.js",
  "scripts": {
    "db:init": "yarn mikro-orm migration:create --initial",
    "db:create": "yarn mikro-orm migration:create",
    "db:up": "yarn mikro-orm migration:up",
    "db:down": "yarn mikro-orm migration:down",
    "postinstall": "yarn build",
    "prebuild": "yarn lint && yarn walk && yarn min",
    "build": "tsc -b",
    "lint": "eslint --fix --ext .ts,.tsx .",
    "min": "javascript-obfuscator public --output public.min",
    "walk": "node ./tools/cpx.js",
    "dev": "ts-node-dev --respawn --transpile-only ./src/index.ts",
    "start": "node ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cdleveille/discit.git"
  },
  "keywords": [
    "disc",
    "golf",
    "api",
    "restful"
  ],
  "author": "Chris Leveille",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cdleveille/discit/issues"
  },
  "homepage": "https://github.com/cdleveille/discit#readme",
  "dependencies": {
    "@mikro-orm/core": "^4.5.9",
    "@mikro-orm/postgresql": "^4.5.9",
    "@types/cpx": "^1.5.2",
    "axios": "^0.24.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cpx": "^1.5.0",
    "cron": "^1.8.2",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "jsdom": "^18.0.1",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^4.5.9",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/cron": "^1.7.3",
    "@types/dotenv": "^8.2.0",
    "@types/ejs": "^3.1.0",
    "@types/express": "^4.17.13",
    "@types/jsdom": "^16.2.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.6",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.2.0",
    "javascript-obfuscator": "^3.0.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./mikro-orm.config.ts"
    ]
  },
  "engines": {
    "yarn": ">=1.22.17"
  }
}